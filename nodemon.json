{
  "watch": [
    "src/**/*"
  ],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules/**/*",
    "dist/**/*"
  ],
  "exec": "ts-node src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "LOG_LEVEL": "debug"
  },
  "delay": "1000",
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false,
  "signal": "SIGTERM",
  "events": {
    "start": "echo 'ðŸš€ Starting Crafty Discord Bot in debug mode...'",
    "restart": "echo 'ðŸ”„ Restarting due to changes...'",
    "crash": "echo 'ðŸ’¥ Bot crashed! Waiting for changes...'",
    "exit": "echo 'ðŸ‘‹ Bot stopped.'"
  }
}